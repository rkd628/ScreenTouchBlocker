<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScreenTouchBlockerWindow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <ImageView
        android:id="@+id/LockIconBackground"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/circle"
        android:tint="#ffffff"
        android:alpha="0.6"
        />

    <ImageView
        android:id="@+id/LockIconGuideLine"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/outline"
        android:tint="#ffffff"
        android:visibility="invisible"
        />

    <View
        android:id="@+id/LockIconTouchOutLine"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:tint="#ffffff"/>

    <ImageView
        android:id="@+id/LockIcon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/sct_lock_icon"
        android:tint="#88ffaa"/>

    <ImageView
        android:id="@+id/BrightBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="7dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="70dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/sct_bright_icon"
        android:background="@drawable/circle"
        android:tint="#ffffff"/>

    <SeekBar
        android:id="@+id/BrightSeekBar"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:max="255"
        android:progress="128"
        android:visibility="invisible" />

    <View
        android:id="@+id/EntireView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />


</RelativeLayout>
